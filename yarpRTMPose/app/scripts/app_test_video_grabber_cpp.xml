<application>
<name>yarprtmpose test video grabber</name>

    <module>
        <name>yarpdev</name>
        <parameters>--context yarpRTMPose --from grabber.ini</parameters>
        <node>container-rtmpose</node>
    </module>

    <module>
        <name>yarpRTMPose</name>
        <node>container-rtmpose</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /skeleton</parameters>
        <node>container-rtmpose</node>
    </module>

    <connection>
        <from>/grabber</from>
        <to>/yarpRTMPose/image:i</to>
        <protocol>mjpeg</protocol>
    </connection>

    <connection>
        <from>/yarpRTMPose/image:o</from>
        <to>/skeleton</to>
        <protocol>mjpeg</protocol>
    </connection>
    
    <connection>
        <from>/yarpRTMPose/target:o</from>
        <to>/mutualgaze/data:i</to>
        <protocol>fast_tcp</protocol>
    </connection>

    <connection>
        <from>/grabber</from>
        <to>/mutualgaze/image:i</to>
        <protocol>mjpeg</protocol>
    </connection>

</application>